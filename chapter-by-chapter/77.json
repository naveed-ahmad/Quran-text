  "total": 50,
  "verses": {
    "1": "وَالۡمُرۡسَلٰتِ عُرۡفًا ۙ‏ ﴿﻿۱﻿﴾  ",
    "2": "فَالۡعٰصِفٰتِ عَصۡفًا ۙ‏ ﴿﻿۲﻿﴾  ",
    "3": "وَّالنّٰشِرٰتِ نَشۡرًا ۙ‏ ﴿﻿۳﻿﴾  ",
    "4": "فَالۡفٰرِقٰتِ فَرۡقًا ۙ‏ ﴿﻿۴﻿﴾  ",
    "5": "فَالۡمُلۡقِيٰتِ ذِكۡرًا ۙ‏ ﴿﻿۵﻿﴾  ",
    "6": "عُذۡرًا اَوۡ نُذۡرًا ۙ‏ ﴿﻿۶﻿﴾  ",
    "7": "اِنَّمَا تُوۡعَدُوۡنَ لَوَاقِعٌ ؕ‏ ﴿﻿۷﻿﴾  ",
    "8": "فَاِذَا النُّجُوۡمُ طُمِسَتۡۙ‏ ﴿﻿۸﻿﴾  ",
    "9": "وَ اِذَا السَّمَآءُ فُرِجَتۡۙ‏ ﴿﻿۹﻿﴾  ",
    "10": "وَاِذَا الۡجِبَالُ نُسِفَتۡۙ‏ ﴿﻿۱۰﻿﴾  ",
    "11": "وَاِذَا الرُّسُلُ  اُقِّتَتۡؕ‏ ﴿﻿۱۱﻿﴾  ",
    "12": "لِاَىِّ يَوۡمٍ اُجِّلَتۡؕ‏ ﴿﻿۱۲﻿﴾  ",
    "13": "لِيَوۡمِ الۡفَصۡلِ‌ۚ‏ ﴿﻿۱۳﻿﴾  ",
    "14": "وَمَاۤ اَدۡرٰٮكَ  مَا يَوۡمُ الۡفَصۡلِؕ‏ ﴿﻿۱۴﻿﴾  ",
    "15": "وَيۡلٌ يَّوۡمَٮِٕذٍ لِّلۡمُكَذِّبِيۡنَ‏ ﴿﻿۱۵﻿﴾  ",
    "16": "اَلَمۡ  نُهۡلِكِ الۡاَوَّلِيۡنَؕ‏ ﴿﻿۱۶﻿﴾  ",
    "17": "ثُمَّ نُتۡبِعُهُمُ الۡاٰخِرِيۡنَ‏ ﴿﻿۱۷﻿﴾  ",
    "18": "كَذٰلِكَ  نَفۡعَلُ بِالۡمُجۡرِمِيۡنَ‏ ﴿﻿۱۸﻿﴾  ",
    "19": "وَيۡلٌ يَّوۡمَٮِٕذٍ لِّلۡمُكَذِّبِيۡنَ‏ ﴿﻿۱۹﻿﴾  ",
    "20": "اَلَمۡ نَخۡلُقۡكُّمۡ مِّنۡ مَّآءٍ مَّهِيۡنٍۙ‏ ﴿﻿۲۰﻿﴾  ",
    "21": "فَجَعَلۡنٰهُ فِىۡ قَرَارٍ مَّكِيۡنٍۙ‏ ﴿﻿۲۱﻿﴾  ",
    "22": "اِلٰى قَدَرٍ مَّعۡلُوۡمٍۙ‏ ﴿﻿۲۲﻿﴾  ",
    "23": "فَقَدَرۡنَا    ۖ فَنِعۡمَ الۡقٰدِرُوۡنَ‏ ﴿﻿۲۳﻿﴾  ",
    "24": "وَيۡلٌ  يَّوۡمَٮِٕذٍ لِّلۡمُكَذِّبِيۡنَ‏ ﴿﻿۲۴﻿﴾  ",
    "25": "اَلَمۡ نَجۡعَلِ الۡاَرۡضَ كِفَاتًا ۙ‏ ﴿﻿۲۵﻿﴾  ",
    "26": "اَحۡيَآءً وَّاَمۡوَاتًا ۙ‏ ﴿﻿۲۶﻿﴾  ",
    "27": "وَّجَعَلۡنَا فِيۡهَا رَوَاسِىَ شٰمِخٰتٍ وَّ اَسۡقَيۡنٰكُمۡ مَّآءً فُرَاتًا ؕ‏ ﴿﻿۲۷﻿﴾  ",
    "28": "وَيۡلٌ يَّوۡمَٮِٕذٍ لِّلۡمُكَذِّبِيۡنَ‏ ﴿﻿۲۸﻿﴾  ",
    "29": "اِنْطَلِقُوۡۤا اِلٰى مَا كُنۡتُمۡ بِهٖ تُكَذِّبُوۡنَ‌ۚ‏ ﴿﻿۲۹﻿﴾  ",
    "30": "اِنْطَلِقُوۡۤا اِلٰى ظِلٍّ  ذِىۡ ثَلٰثِ شُعَبٍۙ‏ ﴿﻿۳۰﻿﴾  ",
    "31": "لَّا ظَلِيۡلٍ وَّلَا يُغۡنِىۡ مِنَ اللَّهَبِؕ‏ ﴿﻿۳۱﻿﴾  ",
    "32": "اِنَّهَا تَرۡمِىۡ بِشَرَرٍ كَالۡقَصۡرِ‌ۚ‏ ﴿﻿۳۲﻿﴾  ",
    "33": "كَاَنَّهٗ جِمٰلَتٌ صُفۡرٌ ؕ‏ ﴿﻿۳۳﻿﴾  ",
    "34": "وَيۡلٌ  يَّوۡمَٮِٕذٍ لِّلۡمُكَذِّبِيۡنَ‏ ﴿﻿۳۴﻿﴾  ",
    "35": "هٰذَا يَوۡمُ لَا يَنۡطِقُوۡنَۙ‏ ﴿﻿۳۵﻿﴾  ",
    "36": "وَلَا يُؤۡذَنُ لَهُمۡ فَيَـعۡتَذِرُوۡنَ‏ ﴿﻿۳۶﻿﴾  ",
    "37": "وَيۡلٌ يَّوۡمَٮِٕذٍ لِّلۡمُكَذِّبِيۡنَ‏ ﴿﻿۳۷﻿﴾  ",
    "38": "هٰذَا يَوۡمُ الۡفَصۡلِ‌ۚ جَمَعۡنٰكُمۡ وَالۡاَوَّلِيۡنَ‏ ﴿﻿۳۸﻿﴾  ",
    "39": "فَاِنۡ كَانَ لَـكُمۡ  كَيۡدٌ فَكِيۡدُوۡنِ‏ ﴿﻿۳۹﻿﴾  ",
    "40": "وَيۡلٌ يَّوۡمَٮِٕذٍ لِّلۡمُكَذِّبِيۡنَ‏ ﴿﻿۴۰﻿﴾  ",
    "41": "اِنَّ  الۡمُتَّقِيۡنَ فِىۡ ظِلٰلٍ وَّعُيُوۡنٍۙ‏ ﴿﻿۴۱﻿﴾  ",
    "42": "وَّفَوَاكِهَ مِمَّا يَشۡتَهُوۡنَؕ‏ ﴿﻿۴۲﻿﴾  ",
    "43": "كُلُوۡا وَاشۡرَبُوۡا هَنِيْٓئًا ۢ بِمَا كُنۡتُمۡ تَعۡمَلُوۡنَ‏ ﴿﻿۴۳﻿﴾  ",
    "44": "اِنَّا كَذٰلِكَ نَجۡزِى الۡمُحۡسِنِيۡنَ‏ ﴿﻿۴۴﻿﴾  ",
    "45": "وَيۡلٌ يَّوۡمَٮِٕذٍ لِّلۡمُكَذِّبِيۡنَ‏ ﴿﻿۴۵﻿﴾  ",
    "46": "كُلُوۡا وَتَمَتَّعُوۡا قَلِيۡلًا اِنَّكُمۡ مُّجۡرِمُوۡنَ‏ ﴿﻿۴۶﻿﴾  ",
    "47": "وَيۡلٌ يَّوۡمَٮِٕذٍ  لِّلۡمُكَذِّبِيۡنَ‏ ﴿﻿۴۷﻿﴾  ",
    "48": "وَاِذَا قِيۡلَ لَهُمُ ارۡكَعُوۡا لَا يَرۡكَعُوۡنَ‏ ﴿﻿۴۸﻿﴾  ",
    "49": "وَيۡلٌ يَّوۡمَٮِٕذٍ لِّلۡمُكَذِّبِيۡنَ‏ ﴿﻿۴۹﻿﴾  ",
    "50": "فَبِاَىِّ حَدِيۡثٍۢ بَعۡدَهٗ يُؤۡمِنُوۡنَ‏ ﴿﻿۵۰﻿﴾  "
  }
}