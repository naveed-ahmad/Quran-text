{
  "total": 40,
  "verses": {
    "1": "لَاۤ اُقۡسِمُ بِيَوۡمِ الۡقِيٰمَةِۙ‏ ﴿﻿۱﻿﴾  ",
    "2": "وَلَاۤ اُقۡسِمُ بِالنَّفۡسِ اللَّوَّامَةِؕ‏ ﴿﻿۲﻿﴾  ",
    "3": "اَيَحۡسَبُ الۡاِنۡسَانُ اَلَّنۡ نَّجۡمَعَ عِظَامَهٗؕ‏ ﴿﻿۳﻿﴾  ",
    "4": "بَلٰى قٰدِرِيۡنَ  عَلٰٓى اَنۡ نُّسَوِّىَ بَنَانَهٗ‏ ﴿﻿۴﻿﴾  ",
    "5": "بَلۡ يُرِيۡدُ الۡاِنۡسَانُ لِيَفۡجُرَ  اَمَامَهٗ‌ۚ‏ ﴿﻿۵﻿﴾  ",
    "6": "يَسۡـَٔـلُ اَيَّانَ يَوۡمُ الۡقِيٰمَةِؕ‏ ﴿﻿۶﻿﴾  ",
    "7": "فَاِذَا بَرِقَ  الۡبَصَرُۙ‏ ﴿﻿۷﻿﴾  ",
    "8": "وَخَسَفَ الۡقَمَرُۙ‏ ﴿﻿۸﻿﴾  ",
    "9": "وَجُمِعَ الشَّمۡسُ وَالۡقَمَرُۙ‏ ﴿﻿۹﻿﴾  ",
    "10": "يَقُوۡلُ الۡاِنۡسَانُ يَوۡمَٮِٕذٍ اَيۡنَ الۡمَفَرُّ‌ ۚ‏ ﴿﻿۱۰﻿﴾  ",
    "11": "كَلَّا لَا وَزَرَؕ‏ ﴿﻿۱۱﻿﴾  ",
    "12": "اِلٰى رَبِّكَ يَوۡمَٮِٕذِ اۨلۡمُسۡتَقَرُّ ؕ‏ ﴿﻿۱۲﻿﴾  ",
    "13": "يُنَبَّؤُا الۡاِنۡسَانُ يَوۡمَٮِٕذٍۢ بِمَا قَدَّمَ وَاَخَّرَؕ‏ ﴿﻿۱۳﻿﴾  ",
    "14": "بَلِ الۡاِنۡسَانُ عَلٰى نَفۡسِهٖ بَصِيۡرَةٌ ۙ‏ ﴿﻿۱۴﻿﴾  ",
    "15": "وَّلَوۡ اَلۡقٰى مَعَاذِيۡرَهٗؕ‏ ﴿﻿۱۵﻿﴾  ",
    "16": "لَا تُحَرِّكۡ بِهٖ لِسَانَكَ لِتَعۡجَلَ  بِهٖؕ‏ ﴿﻿۱۶﻿﴾  ",
    "17": "اِنَّ عَلَيۡنَا جَمۡعَهٗ وَقُرۡاٰنَهٗۚ  ۖ‏ ﴿﻿۱۷﻿﴾  ",
    "18": "فَاِذَا قَرَاۡنٰهُ فَاتَّبِعۡ  قُرۡاٰنَهٗ‌ۚ‏ ﴿﻿۱۸﻿﴾  ",
    "19": "ثُمَّ اِنَّ عَلَيۡنَا بَيَانَهٗؕ‏ ﴿﻿۱۹﻿﴾  ",
    "20": "كَلَّا بَلۡ تُحِبُّوۡنَ الۡعَاجِلَةَ ۙ‏ ﴿﻿۲۰﻿﴾  ",
    "21": "وَتَذَرُوۡنَ الۡاٰخِرَةَ ؕ‏ ﴿﻿۲۱﻿﴾  ",
    "22": "وُجُوۡهٌ يَّوۡمَٮِٕذٍ نَّاضِرَةٌ ۙ‏ ﴿﻿۲۲﻿﴾  ",
    "23": "اِلٰى رَبِّهَا نَاظِرَةٌ‌ ۚ‏ ﴿﻿۲۳﻿﴾  ",
    "24": "وَوُجُوۡهٌ يَّوۡمَٮِٕذٍۢ بَاسِرَةٌ ۙ‏ ﴿﻿۲۴﻿﴾  ",
    "25": "تَظُنُّ اَنۡ يُّفۡعَلَ بِهَا فَاقِرَةٌ ؕ‏ ﴿﻿۲۵﻿﴾  ",
    "26": "كَلَّاۤ اِذَا بَلَغَتِ التَّرَاقِىَۙ‏ ﴿﻿۲۶﻿﴾  ",
    "27": "وَقِيۡلَ مَنۡ؄ رَاقٍۙ‏ ﴿﻿۲۷﻿﴾  ",
    "28": "وَّظَنَّ اَنَّهُ الۡفِرَاقُۙ‏ ﴿﻿۲۸﻿﴾  ",
    "29": "وَالۡتَفَّتِ  السَّاقُ بِالسَّاقِۙ‏ ﴿﻿۲۹﻿﴾  ",
    "30": "اِلٰى رَبِّكَ يَوۡمَٮِٕذِ اۨلۡمَسَاقُؕ‏ ﴿﻿۳۰﻿﴾  ",
    "31": "فَلَا صَدَّقَ وَلَا صَلّٰىۙ‏ ﴿﻿۳۱﻿﴾  ",
    "32": "وَلٰڪِنۡ كَذَّبَ وَتَوَلّٰىۙ‏ ﴿﻿۳۲﻿﴾  ",
    "33": "ثُمَّ ذَهَبَ اِلٰٓى اَهۡلِهٖ يَتَمَطّٰىؕ‏ ﴿﻿۳۳﻿﴾  ",
    "34": "اَوۡلٰى لَكَ فَاَوۡلٰىۙ‏ ﴿﻿۳۴﻿﴾  ",
    "35": "ثُمَّ اَوۡلٰى لَكَ فَاَوۡلٰىؕ‏ ﴿﻿۳۵﻿﴾  ",
    "36": "اَيَحۡسَبُ الۡاِنۡسَانُ اَنۡ  يُّتۡرَكَ سُدًىؕ‏ ﴿﻿۳۶﻿﴾  ",
    "37": "اَلَمۡ يَكُ نُطۡفَةً مِّنۡ مَّنِىٍّ يُّمۡنٰىۙ‏ ﴿﻿۳۷﻿﴾  ",
    "38": "ثُمَّ كَانَ عَلَقَةً فَخَلَقَ فَسَوّٰىۙ‏ ﴿﻿۳۸﻿﴾  ",
    "39": "فَجَعَلَ مِنۡهُ الزَّوۡجَيۡنِ  الذَّكَرَ وَالۡاُنۡثٰىؕ‏ ﴿﻿۳۹﻿﴾  ",
    "40": "اَلَيۡسَ ذٰلِكَ بِقٰدِرٍ عَلٰٓى اَنۡ يُّحۡـىِۦَ الۡمَوۡتٰى‏ ﴿﻿۴۰﻿﴾  "
  }
}