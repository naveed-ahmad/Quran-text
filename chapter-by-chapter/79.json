  "verses": {
    "1": "وَالنّٰزِعٰتِ غَرۡقًا ۙ‏ ﴿﻿۱﻿﴾  ",
    "2": "وَّالنّٰشِطٰتِ نَشۡطًا ۙ‏ ﴿﻿۲﻿﴾  ",
    "3": "وَّالسّٰبِحٰتِ سَبۡحًا ۙ‏ ﴿﻿۳﻿﴾  ",
    "4": "فَالسّٰبِقٰتِ سَبۡقًا ۙ‏ ﴿﻿۴﻿﴾  ",
    "5": "فَالۡمُدَبِّرٰتِ اَمۡرًا‌ ۘ‏ ﴿﻿۵﻿﴾  ",
    "6": "يَوۡمَ تَرۡجُفُ الرَّاجِفَةُ ۙ‏ ﴿﻿۶﻿﴾  ",
    "7": "تَتۡبَعُهَا الرَّادِفَةُ ؕ‏ ﴿﻿۷﻿﴾  ",
    "8": "قُلُوۡبٌ يَّوۡمَٮِٕذٍ وَّاجِفَةٌ ۙ‏ ﴿﻿۸﻿﴾  ",
    "9": "اَبۡصَارُهَا خَاشِعَةٌ‌ ۘ‏ ﴿﻿۹﻿﴾  ",
    "10": "يَقُوۡلُوۡنَ ءَاِنَّا لَمَرۡدُوۡدُوۡنَ فِى الۡحَـافِرَةِ ؕ‏ ﴿﻿۱۰﻿﴾  ",
    "11": "ءَاِذَا كُنَّا عِظَامًا نَّخِرَةً ؕ‏ ﴿﻿۱۱﻿﴾  ",
    "12": "قَالُوۡا تِلۡكَ اِذًا كَرَّةٌ خَاسِرَةٌ‌ ۘ‏ ﴿﻿۱۲﻿﴾  ",
    "13": "فَاِنَّمَا هِىَ زَجۡرَةٌ وَّاحِدَةٌ ۙ‏ ﴿﻿۱۳﻿﴾  ",
    "14": "فَاِذَا هُمۡ بِالسَّاهِرَةِ ؕ‏ ﴿﻿۱۴﻿﴾  ",
    "15": "هَلۡ اَتٰٮكَ حَدِيۡثُ مُوۡسٰى‌ۘ‏ ﴿﻿۱۵﻿﴾  ",
    "16": "اِذۡ نَادٰٮهُ رَبُّهٗ بِالۡوَادِ الۡمُقَدَّسِ طُوًى‌ۚ‏ ﴿﻿۱۶﻿﴾  ",
    "17": "اِذۡهَبۡ اِلٰى فِرۡعَوۡنَ اِنَّهٗ طَغٰى ۖ‏ ﴿﻿۱۷﻿﴾  ",
    "18": "فَقُلۡ هَلۡ لَّكَ اِلٰٓى اَنۡ تَزَكّٰى ۙ‏ ﴿﻿۱۸﻿﴾  ",
    "19": "وَاَهۡدِيَكَ اِلٰى رَبِّكَ فَتَخۡشٰى‌ۚ‏ ﴿﻿۱۹﻿﴾  ",
    "20": "فَاَرٰٮهُ الۡاٰيَةَ الۡكُبۡرٰى ۖ‏ ﴿﻿۲۰﻿﴾  ",
    "21": "فَكَذَّبَ وَعَصٰى ۖ‏ ﴿﻿۲۱﻿﴾  ",
    "22": "ثُمَّ اَدۡبَرَ يَسۡعٰىۖ‏ ﴿﻿۲۲﻿﴾  ",
    "23": "فَحَشَرَ فَنَادٰىۖ‏ ﴿﻿۲۳﻿﴾  ",
    "24": "فَقَالَ اَنَا رَبُّكُمُ الۡاَعۡلٰى ۖ‏ ﴿﻿۲۴﻿﴾  ",
    "25": "فَاَخَذَهُ اللّٰهُ نَڪَالَ الۡاٰخِرَةِ وَالۡاُوۡلٰى ؕ‏ ﴿﻿۲۵﻿﴾  ",
    "26": "اِنَّ فِىۡ ذٰلِكَ لَعِبۡرَةً لِّمَنۡ يَّخۡشٰىؕ‏ ﴿﻿۲۶﻿﴾  ",
    "27": "ءَاَنۡتُمۡ اَشَدُّ خَلۡقًا اَمِ السَّمَآءُ‌ ؕ بَنٰٮهَا‏ ﴿﻿۲۷﻿﴾  ",
    "28": "رَفَعَ سَمۡكَهَا فَسَوَّٮهَا ۙ‏ ﴿﻿۲۸﻿﴾  ",
    "29": "وَ اَغۡطَشَ لَيۡلَهَا وَاَخۡرَجَ ضُحٰٮهَا‏ ﴿﻿۲۹﻿﴾  ",
    "30": "وَالۡاَرۡضَ بَعۡدَ ذٰلِكَ دَحٰٮهَا ؕ‏ ﴿﻿۳۰﻿﴾  ",
    "31": "اَخۡرَجَ مِنۡهَا مَآءَهَا وَمَرۡعٰٮهَا‏ ﴿﻿۳۱﻿﴾  ",
    "32": "وَالۡجِبَالَ اَرۡسٰٮهَا ۙ‏ ﴿﻿۳۲﻿﴾  ",
    "33": "مَتَاعًا لَّـكُمۡ وَلِاَنۡعَامِكُمۡؕ‏ ﴿﻿۳۳﻿﴾  ",
    "34": "فَاِذَا جَآءَتِ الطَّآمَّةُ الۡكُبۡرٰى ۖ‏ ﴿﻿۳۴﻿﴾  ",
    "35": "يَوۡمَ يَتَذَكَّرُ الۡاِنۡسَانُ مَا سَعٰىۙ‏ ﴿﻿۳۵﻿﴾  ",
    "36": "وَبُرِّزَتِ الۡجَحِيۡمُ لِمَنۡ يَّرٰى‏ ﴿﻿۳۶﻿﴾  ",
    "37": "فَاَمَّا مَنۡ طَغٰىۙ‏ ﴿﻿۳۷﻿﴾  ",
    "38": "وَاٰثَرَ الۡحَيٰوةَ الدُّنۡيَا ۙ‏ ﴿﻿۳۸﻿﴾  ",
    "39": "فَاِنَّ الۡجَحِيۡمَ هِىَ الۡمَاۡوٰىؕ‏ ﴿﻿۳۹﻿﴾  ",
    "40": "وَاَمَّا مَنۡ خَافَ مَقَامَ رَبِّهٖ وَ نَهَى النَّفۡسَ عَنِ الۡهَوٰىۙ‏ ﴿﻿۴۰﻿﴾  ",
    "41": "فَاِنَّ الۡجَـنَّةَ هِىَ الۡمَاۡوٰىؕ‏ ﴿﻿۴۱﻿﴾  ",
    "42": "يَسۡــٴَــلُوۡنَكَ عَنِ السَّاعَةِ اَيَّانَ مُرۡسٰٮهَا ؕ‏ ﴿﻿۴۲﻿﴾  ",
    "43": "فِيۡمَ اَنۡتَ مِنۡ ذِكۡرٰٮهَاؕ‏ ﴿﻿۴۳﻿﴾  ",
    "44": "اِلٰى رَبِّكَ مُنۡتَهٰٮهَاؕ‏ ﴿﻿۴۴﻿﴾  ",
    "45": "اِنَّمَاۤ اَنۡتَ مُنۡذِرُ مَنۡ يَّخۡشٰٮهَاؕ‏ ﴿﻿۴۵﻿﴾  ",
    "46": "كَاَنَّهُمۡ يَوۡمَ يَرَوۡنَهَا لَمۡ يَلۡبَثُوۡۤا اِلَّا عَشِيَّةً اَوۡ ضُحٰٮهَا‏ ﴿﻿۴۶﻿﴾  "
  }
